<div class="row">
  <aside class="col-sm-4">
    <% if logged_in? %>
      <%= form_with(model: @post, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :content, "投稿内容" %>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
      <% end %>
    <% else %>
      <p class="text-center">呟くにはログインが必要です</p>
      <a class="top-signup signup", href="<%= signup_path %>">Sign up</a>
    
      <p class="text-center">or</p>

      <a class="top-signup login", href="<%= login_path %>">Login</a>
    <% end %>
  </aside>
  <div class="col-sm-8">
    <h3 class="text-center">投稿一覧</h3>
    <div class="row">
      <div class="col-6 offset-sm-3">
        <%= form_tag(posts_path, method: :get) do %>
          <div class="form-group">
            <%= label_tag :search, '検索', class: 'search-label' %>
            <%= text_field_tag :search, params[:search], class:"form-control" , placeholder: 'キーワードを入力'%>
          </div>
            <%= submit_tag '検索', class: "btn btn-primary btn-block search-button" %>
        <% end %>
      </div>
    </div>
    <%= render 'posts/posts', posts: @posts %>
  </div>
</div>