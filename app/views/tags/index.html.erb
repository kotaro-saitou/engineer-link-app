<h2 class='text-center tag'>タグ一覧</h2>
<div class="row">
  <div class="col-6 offset-3">
    <%= form_tag(tags_path, method: :get) do %>
      <div class="form-group">
        <%= label_tag :search, '検索', class: 'search-label' %>
        <%= text_field_tag :search,"", class:"form-control" , placeholder: 'キーワードを入力'%>
      </div>
      <%= submit_tag '検索', class: "btn btn-primary btn-block search-button" %>
    <% end %>
  </div>
</div>
<%= render 'tags/tags', tags:@tags %>

<div class="row tag-form">
  <aside class="col-sm-6 offset-sm-3">
    <% if logged_in? %>
      <%= form_with(model: @tag, local: true) do |f| %>
        <div class="form-group"> 
          <%= f.label :title, 'タグ名' %>
          <%= f.text_field :title, class: 'form-control' %>
          <%= f.label :content, '紹介文' %>
          <%= f.text_field :content, class: 'form-control' %>
          <%= f.label :image, '画像' %>
          <%= f.file_field :image %>
        </div>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
      <% end %>
    <% else %>
      <p class="text-center">タグを追加するにはログインが必要です</p>
      <a class="top-signup signup", href="<%= signup_path %>">Sign up</a>
    
      <p class="text-center">or</p>

      <a class="top-signup login", href="<%= login_path %>">Login</a>
    <% end %>
  </aside>
</div>
  


