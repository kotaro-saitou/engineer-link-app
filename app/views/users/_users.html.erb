<% if users.any? %>
  <div class='row'>
    <% users.each do |user| %>
      <div class="col-lg-2 col-md-3 col-sm-6 col-xs-8">
        <div class="card mb-3">
          <div class="card-header">
              <%= link_to user.name, user_path(user) %>
          </div>
          <div class="card-body">
            <% if user.avatar.attached? %>
              <%= image_tag user.avatar, size: '50x50' %>
            <% else %>
              No image
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>


